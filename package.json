{
  "name": "nerdbug-backend-assessment",
  "version": "1.0.0",
  "description": "Nerdbug backend assessment",
  "main": "build/index.js",
  "keywords": [],
  "author": "Okwukwe Ewurum",
  "license": "MIT",
  "engines": {
    "node": ">=18.x"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --exit-child src/index.ts",
    "build": "tsc -p .",
    "start": "node build/src/index.js",
    "pretest": "cross-env NODE_ENV=test npx sequelize-cli db:migrate",
    "test": "cross-env NODE_ENV=test jest",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:seed:undo": "npx sequelize-cli db:seed:undo:all",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:rollback": "npx sequelize-cli db:migrate:undo",
    "generate:seed": "npx sequelize-cli seed:generate --name",
    "generate:migration": "npx sequelize-cli migration:create --name"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "config": "^3.3.9",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "envalid": "^8.0.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.3",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.35.0",
    "sequelize-typescript": "^2.1.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.0",
    "@japa/api-client": "^2.0.0-1",
    "@japa/expect": "^3.0.0-1",
    "@japa/expect-type": "^2.0.0-1",
    "@japa/runner": "^3.0.0-9",
    "@types/bcryptjs": "^2.4.6",
    "@types/config": "^3.3.3",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.9.0",
    "@types/supertest": "^2.0.16",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.1",
    "sequelize-cli": "^6.6.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "5.2.2"
  }
}
